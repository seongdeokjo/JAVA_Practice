    <select id="listAllReview"  resultMap="ReviewDomain" >
        SELECT 
        	ridx
        	, rtitle
        	, rname
        	, rcontents
        	, rrate
        	, date_format(rdate,'%Y-%m-%d') as rdate
        	, rcategory
            , rlikes
            , pidx
        FROM 
            review
        ORDER BY 
            ridx desc, rdate desc
    </select>
    
    
